<UkModal @visible={{@visible}} @onHide={{@onCloseForm}} as |modal|>
    <modal.header>
        <h2 class="uk-modal-title">Make a copy of {{@oldName}}?
        </h2>
    </modal.header>
    <modal.body>

        <ValidatedForm @model={{changeset this.data this.Validations}} @on-submit={{this.copyForm}} as |f|>
            <f.input @name="name" @label='Name' @required={{true}} />
            <f.input @name="slug" @label='Slug' @required={{true}} />
            <f.submit class="uk-margin-small" @label="Add" />
        </ValidatedForm>
